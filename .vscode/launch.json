    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/src/my_app",
            "env": {
                "FLASK_APP": "demo_app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host", "unix:///tmp/demo.soc",
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "internalConsole"
        }
    ]
}